<%- include('../partials/head') %>
</head>
<body class="min-h-screen bg-gray-100">
  <%- include('../partials/nav') %>
  <main class="py-12 px-4">
    <div class="container mx-auto max-w-7xl">
      <h1 class="text-6xl font-bold text-blue-700 mb-16 text-center tracking-tight">Here are all the homes</h1>
      <div class="max-w-6xl mx-auto">
        <div class="flex flex-wrap gap-8 justify-center">
          <% homes.forEach(home => { %>
            <div class="flex-shrink-0 w-full md:w-96 bg-white rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden">
              <img src="<%= home.photoUrl %>" alt="<%= home.houseName %>" class="w-full h-64 object-cover">
              <div class="p-6">
                <h2 class="text-2xl font-bold text-gray-900 mb-2"><%= home.houseName %></h2>
                <div class="flex items-center mb-4">
                  <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                  </svg>
                  <span class="ml-2 text-gray-600"><%= home.rating %>/5</span>
                </div>
                <div class="flex items-center mb-4">
                  <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                  <span class="ml-2 text-gray-600"><%= home.location %></span>
                </div>
                <div class="flex items-center justify-between">
                  <span class="text-2xl font-bold text-blue-600">Rs<%= home.price %></span>

                  <%- include('../partials/add-to-favourite', {home: home}) %>
                  <a 
                  href="/homes/<%= home._id %>"
                  class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 transition-colors">
                    Details
                  </a>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      </div>
    </div>
  </main>
</body>
</html>